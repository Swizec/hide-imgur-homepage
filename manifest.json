{
    "manifest_version": 2,
    "name": "Hide imgur homepage",
    "version": "1.1",
    "description":
        "Replace the Imgur homepage with tips for taking a healthy break. New tip every time you slack.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://imgur.com/*"],
            "js": ["hide-imgur.js"],
            "css": ["hide-imgur.css"],
            "run_at": "document_start"
        }
    ],
    "permissions": ["tabs", "*://imgur.com/*"]
}
